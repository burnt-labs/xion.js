{
  "extends": "@burnt-labs/tsconfig/base.json",
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/declarations",
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "./src",
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}