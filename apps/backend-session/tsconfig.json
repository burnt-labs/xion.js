{
  "extends": "@burnt-labs/tsconfig/nextjs.json",
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "declaration": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}