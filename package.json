{
  "name": "@burnt-labs/xion.js",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo run dev --concurrency 13",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "publish:packages": "changeset publish",
    "version:packages": "changeset version",
    "test": "pnpm test:unit && pnpm test:integration",
    "test:unit": "turbo run test",
    "test:unit:watch": "turbo run test --concurrency 1 -- --watch",
    "test:unit:coverage": "turbo run test -- --coverage",
    "test:integration": "turbo run test:integration",
    "test:integration:watch": "turbo run test:integration:watch",
    "generate:types": "pnpm --filter @burnt-labs/signers generate:types",
    "generate:types:testnet": "pnpm --filter @burnt-labs/signers generate:types:testnet",
    "generate:types:mainnet": "pnpm --filter @burnt-labs/signers generate:types:mainnet"
  },
  "packageManager": "pnpm@8.9.0",
  "dependencies": {
    "@burnt-labs/tsconfig": "workspace:*",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "turbo": "^2.0.11"
  },
  "devDependencies": {
    "@hono/zod-openapi": "^0.18.4",
    "@vitest/coverage-v8": "^1.6.1"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.2.47",
      "@types/react-dom": "^18.2.18",
      "@cosmjs/amino": "^0.36.0",
      "@cosmjs/cosmwasm-stargate": "^0.36.0",
      "@cosmjs/crypto": "^0.36.0",
      "@cosmjs/encoding": "^0.36.0",
      "@cosmjs/math": "^0.36.0",
      "@cosmjs/proto-signing": "^0.36.0",
      "@cosmjs/stargate": "^0.36.0",
      "@cosmjs/tendermint-rpc": "^0.36.0",
      "@cosmjs/utils": "^0.36.0",
      "cosmjs-types": "^0.9.0"
    }
  }
}
