{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": [
    "NEXT_PUBLIC_DEFAULT_CHAIN_INFO",
    "NEXT_PUBLIC_DEFAULT_API_URL",
    "NEXT_PUBLIC_DEFAULT_INDEXER_URL",
    "NEXT_PUBLIC_DEFAULT_STYTCH_PUBLIC_TOKEN",
    "NEXT_PUBLIC_DEPLOYMENT_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [".env.production.local", ".env.local", ".env.production", ".env"]
    },
    "test": {
      "env": [".env.test.local", ".env.test", ".env"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "check-types": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ],
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
